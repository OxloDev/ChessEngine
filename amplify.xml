version: 1
frontend:
    phases:
        preBuild:
            commands: 
                - nvm install 14.15.0
                - nvm use 14.15.0
                - yarn install
        build:
            commands: 
                - nvm install 14.15.0
                - nvm use 14.15.0
                - node -v
                - yarn run build
    artifacts:
        baseDirectory: build
        files:
            - '**/*'
    cache:
        paths:
            - 'node_modules/**/*'
